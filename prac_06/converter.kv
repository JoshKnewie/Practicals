BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '15'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.plus_minus_one(1)
            Button:
                text: 'Down'
                on_press: app.plus_minus_one(-1)

    Label:
        id: output_number
        font_size: 48
        color: (1, 1, 0, 1)